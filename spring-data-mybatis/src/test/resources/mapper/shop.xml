<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC
		"-//mybatis.org//DTD Mapper 3.0//EN"
		"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springframework.data.mybatis.domain.sample.Shop">
	<select id="custom" resultMap="__result_map">
		SELECT * FROM t_shop
		<where>
			(
			<choose>
				<when test="ids != null and ids.length > 0">
					id IN
					<foreach item="__item" index="__index" collection="ids" open="("
							 separator="," close=")">#{__item}
					</foreach>
				</when>
				<otherwise>0=1</otherwise>
			</choose>
			)
		</where>
	</select>

	<resultMap id="__result_map" type="org.springframework.data.mybatis.domain.sample.Shop">
		<id property="id" column="id" javaType="java.lang.Long" jdbcType="BIGINT"  />
		<result property="version" column="version" javaType="java.lang.Integer" jdbcType="INTEGER"  />
		<result property="name" column="name" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="introduce" column="introduce" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="emailAddress" column="email_address" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="active" column="active" javaType="java.lang.Boolean" jdbcType="BIT"  />
		<result property="duration" column="duration" javaType="java.lang.Integer" jdbcType="INTEGER"  />
		<result property="openingTime" column="openingTime" javaType="java.util.Date" jdbcType="BIGINT"  typeHandler="org.springframework.data.mybatis.mapping.handler.DateUnixTimestampTypeHandler" />
		<result property="brandEstablishmentTime" column="brand_time" javaType="java.lang.Long" jdbcType="TIMESTAMP"  typeHandler="org.springframework.data.mybatis.mapping.handler.UnixTimestampDateTypeHandler" />
		<result property="address.country" column="country" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="address.city" column="city" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="address.streetName" column="street_name" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="address.streetNo" column="street_number" javaType="java.lang.String" jdbcType="VARCHAR"  />
		<result property="createdBy" column="created_by" javaType="java.lang.Long" jdbcType="BIGINT"  />
		<result property="creationDate" column="creation_date" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP"  />
		<result property="lastUpdatedBy" column="last_updated_by" javaType="java.lang.Long" jdbcType="BIGINT"  />
		<result property="lastUpdateDate" column="last_update_date" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP"  />
		<collection property="goods"
					ofType="org.springframework.data.mybatis.domain.sample.Goods"
					select="org.springframework.data.mybatis.domain.sample.Goods.__association_one_to_many_goods"
					column="{ id=id }"
					fetchType="eager"></collection>
	</resultMap>

</mapper>
